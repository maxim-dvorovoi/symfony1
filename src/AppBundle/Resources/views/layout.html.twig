<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% block stylesheets %}{% endblock %}

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="{{ asset('bundles/app/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/css/bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/css/bootstrap-grid.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/css/bootstrap-reboot.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/css/bootstrap-reboot.css') }}" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/4.1/examples/sticky-footer-navbar/" rel="stylesheet">
    <link href="{{ asset('bundles/app/css/main.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    {% block title %}Welcome!{% endblock %}

</head>

<body>

    <header>

        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="{{ path('homepage') }}">НОВОСТИ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('homepage') }}">Главная <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="https://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Категории</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown01">
                            <a class="dropdown-item" href="{{ path('category_item', {id:1}) }}">Политика</a>
                            <a class="dropdown-item" href="{{ path('category_item', {id:4}) }}">Экономика</a>
                            <a class="nav-link dropdown-toggle" href="https://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: black; margin-left: 15px">Финансы</a>
                                <div class="dropdown-menu" aria-labelledby="dropdown01" style="margin-left: 20px">
                                    <a class="dropdown-item" href="{{ path('category_item', {id:2}) }}">Финансовые новости</a>
                                    <a class="dropdown-item" href="{{ path('category_item', {id:3}) }}">Финансовые прогнозы</a>
                                </div>
                        </div>
                    </li>
                    <li class="nav-item disable">
                        <a class="nav-link" href="{{ path('login') }}">Войти <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item disable">
                        <a class="nav-link" href="{{ path('user_registration') }}">Регистрация <span class="sr-only">(current)</span></a>
                    </li>

                </ul>
                <form class="form-inline mt-2 mt-md-0" method="POST">
                    <input class="form-control mr-sm-2" type="search"  placeholder="Найти" aria-label="Search" list="search" name="search">
                    <datalist id="search">
                        <option>Политика</option>
                        <option>Экономика</option>
                        <option>Финансовые новости</option>
                        <option>Финансовые прогнозы</option>
                        <option>Топ</option>
                        <option>Круто</option>
                    </datalist>
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit" name="submit">Поиск</button>
                </form>
            </div>
        </nav>
    </header>

    <div class="site">
        <div class="reklams">
            <br><br><br><br>

            <div class="banner" onmouseover="price();">
                <a href="#mail"><div class="coupon">
                        <h4>Купон на скидку 10%</h4>
                    </div></a>
                <br><br><br><br><br>
                <h2>Ручка</h2><br><br>
                <p id="price" class="price">10грн</p>
            </div>

            <br><br><br><br>
            <img src="https://storage.googleapis.com/cdn.brandwiki.today/bw/indianfoodfreak/2014/02/food-freak-web-banner-final-vertical-01-1.jpg">
        </div>

        <div class="main">
            {% block body %}{% endblock %}
        </div>

        <div class="reklams">
            <br><br><br><br>
            <img src="https://www.greenmap.org/greenhouse/files/press/GMS_PR_Banner_10by2_Leaf.jpg"><br><br><br><br>
            <img src="http://www.customprintbanner.com/shop/catalog/images/201302221958-1.jpg">
        </div>
    </div>

    <div id="mail">
        <div id="okno">
            <h3>Подпишитесь на нашу рассылку</h3><br>
            <input type="text" placeholder="@Email">
            <input type="text" placeholder="Ваше Имя">
            <a href="#" class="close">Закрыть</a>
            <a href="#" class="send">Отправить</a>
        </div>
    </div>

    {% block javascripts %}{% endblock %}

    <script type="text/javascript">
        setTimeout(function () {location.href = '#mail';}, 15000);
    </script>

    <script type="text/javascript">
        function price() {
            document.getElementById("price").innerHTML = "9грн";
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="{{ asset('bundles/app/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/app/js/bootstrap.bundle.js') }}"></script>
    <script src="{{ asset('bundles/app/js/bootstrap.js') }}"></script>

</body>
</html>





